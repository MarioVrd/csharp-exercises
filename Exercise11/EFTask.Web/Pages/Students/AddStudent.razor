@page "/students/add"
@inherits AddStudentBase
 
<h3>Add Student</h3>

<form @onsubmit="CreateStudent">
    <div class="form-group">
        <label for="first-name">First Name</label>
        <input id="first-name" class="form-control" @bind="student.Ime" />
    </div>
    <div class="form-group">
        <label for="last-name">Last Name</label>
        <input id="last-name" class="form-control" @bind="student.Prezime" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary">Add Student</button>
    </div>
</form>
