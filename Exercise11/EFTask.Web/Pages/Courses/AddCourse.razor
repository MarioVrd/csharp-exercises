@page "/courses/add"
@inherits AddCourseBase

<h3>Add Course</h3>

<EditForm Model="@Course" OnValidSubmit="AddCourse">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="title">Title</label>
        <InputText id="title" class="form-control" @bind-Value="Course.Naziv" />
        <ValidationMessage For="@(() => Course.Naziv)" />
    </div>
    <div class="form-group">
        <button class="btn btn-block btn-primary">Add Course</button>
    </div>
</EditForm>

