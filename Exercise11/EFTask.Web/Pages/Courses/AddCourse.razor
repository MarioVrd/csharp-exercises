@page "/courses/add"
@inherits AddCourseBase

<h3>AddCourse</h3>

<EditForm Model="Course" OnValidSubmit="AddCourse">
    <div class="form-group">
        <label for="title">Title</label>
        <InputText id="title" class="form-control" @bind-Value="Course.Naziv"></InputText>
    </div>
    <div class="form-group">
        <button class="btn btn-block btn-primary">Add Course</button>
    </div>
</EditForm>

